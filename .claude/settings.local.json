  "permissions": {
    "allow": [
      "Bash(base64:*)",
      "Bash(cat:*)",
      "Bash(cloc:*)",
      "Bash(eas:*)",
      "Bash(echo:*)",
      "Bash(find:*)",
      "Bash(gh api:*)",
      "Bash(gh auth status:*)",
      "Bash(gh browse:*)",
      "Bash(gh issue list:*)",
      "Bash(gh issue status:*)",
      "Bash(gh issue view:*)",
      "Bash(gh pr:*)",
      "Bash(gh release list:*)",
      "Bash(gh release view:*)",
      "Bash(gh repo view:*)",
      "Bash(gh run list:*)",
      "Bash(gh run view:*)",
      "Bash(gh run watch:*)",
      "Bash(gh status:*)",
      "Bash(gh workflow list:*)",
      "Bash(gh workflow view:*)",
      "Bash(gh workflow:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git stash:*)",
      "Bash(git worktree:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(npm ci:*)",
      "Bash(npm install:*)",
      "Bash(npm run generate:schema:*)",
      "Bash(npm run lint:*)",
      "Bash(npm run lint:fix:*)",
      "Bash(npm run lint:sh:*)",
      "Bash(git add:*)",
      "Bash(npm run test:*)",
      "Bash(npm run test:prepush:*)",
      "Bash(git commit:*)",
      "Bash(npm test:*)",
      "Bash(npm view:*)",
      "Bash(npx eslint:*)",
      "Bash(npx prettier:*)",
      "Bash(npx prisma generate:*)",
      "Bash(npx tsc:*)",
      "Bash(npx vitest:*)",
      "Bash(xargs cloc:*)",
      "WebFetch(domain:docs.expo.dev)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:stackoverflow.com)",
      "WebFetch(domain:www.npmjs.com)",
      "WebSearch",
      "mcp__github__add_issue_comment",
      "mcp__github__list_pull_requests",
      "mcp__github__pull_request_read",
      "mcp__github__pull_request_review_write",
      "mcp__ide__getDiagnostics"
    ],
    "deny": [
      "Bash(git commit --no-verify:*)",
      "Bash(git push --force-with-lease:*)",
      "Bash(git push --force:*)",
      "Bash(git push --no-verify:*)",
      "Bash(git push -f:*)",
      "Bash(git push:*)",
      "BashOutput(*)"
    ],
    "ask": [
      "Bash(SKIP_E2E_CHECK=1 git push:*)",
      "Bash(chmod:*)",
      "Bash(gh secret:*)",
      "Bash(git checkout:*)",
      "Bash(git merge:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/validate-edit.sh"
          }
        ]
      }
    ]
  }
}
