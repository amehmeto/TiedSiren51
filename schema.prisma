generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["reactNative"]
}

datasource db {
  provider = "sqlite"
  url      = "file:../app.db"
}

// Your data model

model User {
  id   Int    @id @default(autoincrement())
  name String
}

model BlockSession {
  id                  String      @id @default(uuid())
  name                String
  startedAt           String
  endedAt             String
  startNotificationId String
  endNotificationId   String
  blockingConditions  String // JSON string of BlockingConditions[]
  blocklists          Blocklist[]
  devices             Device[]
  createdAt           DateTime    @default(now())
}

model Blocklist {
  id       String         @id @default(uuid())
  name     String
  sirens   String // JSON string
  sessions BlockSession[]
}

model Device {
  id       String         @id @default(uuid())
  type     String
  name     String
  sessions BlockSession[]
}

model Siren {
  id    String  @id @default(uuid())
  type  String // 'android', 'ios', 'website', 'keyword'
  value String // package name for apps, URL for websites, or keyword
  name  String?
  icon  String?
}

model Timer {
  id        String   @id
  userId    String
  endAt     Float
  updatedAt DateTime @default(now()) @updatedAt
}
